{
    "manifest_version": 3,
    "name": "Real Score",
    "version": "1.0",
    "description": "A live soccer scorer extension using football-data.org API",
    "permissions": [
        "storage",
        "notifications",
        "https://api.football-data.org/"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon-16.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "chrome_url_overrides": {
        "newtab": "main.html"
    }
}
